{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Backtest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_backtest.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "--data", "skills/opsell/assets/TSEA_加權指_日線.csv",
                "--output", "backtest_results.xlsx",
                "--year", "2026"
            ]
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}
